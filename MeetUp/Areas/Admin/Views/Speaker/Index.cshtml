

@{
    ViewData["Title"] = "Index";
}
@model List<Speaker>

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-outline-success m-1">Create</a>
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Subtitle</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Image</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Settings</h6>
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.Id</h6></td>
                                <td class="border-bottom-0">
                                    
                                   @item.Name
                                </td>
                                <td class="border-bottom-0">
                                    @item.Subtitle
                                </td>
                                <td class="border-bottom-0">

                                    <img  style="width:150px;height:150px" src="@item.ImageUrl" />
                                </td>
                                <td class="border-bottom-0">
                                    <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger m-1">Delete</a>
                                    <a asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-success m-1">Update</a>
                                </td>
                              
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>